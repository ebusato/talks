\begin_deeper
\begin_layout Itemize
\begin_inset Formula $q_{\mu}=2\left(\mu s-N_{obs}\ln\frac{\mu s+b}{b}\right)$
\end_inset


\end_layout

\begin_layout Itemize
When 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $f^{\downarrow}\ll0$
\end_inset

, 
\begin_inset Formula $f^{syst}=0$
\end_inset

 quite frequently
\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit
 
\begin_inset Formula $\Rightarrow s=b=0\Rightarrow N_{obs}=0\Rightarrow q_{\mu}=2\mu s\text{ (for both hypothesis)\Rightarrow}$
\end_inset

CL
\begin_inset Formula $_{s+b}$
\end_inset

 and CL
\begin_inset Formula $_{s}$
\end_inset

 can't go to very low values as 
\begin_inset Formula $\mu$
\end_inset

 increases
\end_layout

