\begin_layout BeginFrame
Sensitivity of an analysis
\end_layout

\begin_layout Itemize
Sensitivity of an analysis not given by 
\begin_inset Formula $s_{\text{up}}$
\end_inset

 but by some quantity measuring by how much 
\begin_inset Formula $s_{\text{up}}$
\end_inset

 differs from some nominal signal expectation 
\begin_inset Formula $s_{\text{nom}}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Example: SUSY predicts 
\begin_inset Formula $s_{\text{nom}}$
\end_inset

 sgluon events after selection
\end_layout

\begin_deeper
\begin_layout Itemize
if 
\begin_inset Formula $s_{\text{up}}<s_{\text{nom}}$
\end_inset

: sgluon excluded
\end_layout

\begin_layout Itemize
if 
\begin_inset Formula $s_{\text{up}}\text{\geq}s_{\text{nom}}$
\end_inset

: sgluon not excluded
\end_layout

\end_deeper
\end_deeper
