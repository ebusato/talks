\end_layout

\end_inset


\end_layout

\begin_layout Standard

\series bold
\size small
\color blue
Single channel
\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
vspace*{-0.2cm}
\end_layout

\end_inset


