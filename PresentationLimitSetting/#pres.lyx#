\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{center}
\end_layout

\end_inset


\end_layout

\begin_layout Standard

\size scriptsize
\color black
\begin_inset Formula $\boxed{{\color{black}{\cal \mathcal{L}}(\mu,s',\{b_{i}'\},\{\eta_{j}\})=\frac{\left(\mu s''+\sum_{i}b_{i}''\right)^{N_{\text{obs}}}}{N_{\text{obs}}!}e^{-(\mu s''+\sum_{i}b_{i}'')}f(s';s_{\text{nom}},\sigma_{s})\prod\limits _{i}f(b_{i}';b_{i},\sigma_{i})\prod\limits _{j}g(\eta_{j})}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{center}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
with
\end_layout

\begin_layout Itemize
\begin_inset Formula $b_{i}''=b_{i}''(\{\eta_{j}\},b_{i}')=b_{i}'\times\prod\limits_{j}f_{ij}^{\text{syst}}(\eta_{j})$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $s''=s''(\{\eta_{j}\},s')=s'\times\prod\limits_{j}f_{j}^{\text{syst}}(\eta_{j})$
\end_inset

 
\end_layout

\end_deeper
\begin_layout Itemize
Marginal model: likelihood integrated over all nuisance parameters
\end_layout

\begin_layout Itemize
McLimit, CLsGenerator
\end_layout

\begin_deeper
\begin_layout Itemize
Test: 
\begin_inset Formula $q_{\mu}=-2\ln\frac{{\cal L}(\mu,s'=s_{\text{nom}},\{b_{i}'\}=\{b_{i}\},\{\eta_{j}\}=0)}{{\cal L}(\mu=0)}$
\end_inset

 
\end_layout

\end_deeper
\begin_layout Itemize
BayesianMCMC
\end_layout

\begin_deeper
\begin_layout Itemize
Integrate marginal likelihood
\end_layout

\end_deeper
\begin_layout BeginFrame
Conclusion
\end_layout

\begin_layout Itemize
Limits are arbitrary in many ways
\end_layout

\begin_deeper
\begin_layout Itemize
Make cross-checks !
\end_layout

\end_deeper
\begin_layout Itemize
Analytical solutions exists in Single channel - No uncertainties case
\end_layout

\begin_layout Itemize
CLsGenerator and Bayesian w/ uniform prior are equivalent when no uncertainty
 on signal
\end_layout

