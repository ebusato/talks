\end_layout

\begin_layout Standard
\begin_inset Formula $\text{\Rightarrow}$
\end_inset

 
\begin_inset Formula $\Phi\left(\frac{N_{\text{\text{obs}}}-(s_{\text{up}}+\sum b_{i})}{\sqrt{s_{\text{up}}+\sum b_{i}}}\right)=\alpha$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $\Rightarrow N_{\text{obs}}-(s_{\text{up}}+\sum b_{i})=-\sqrt{s_{\text{up}}+\sum b_{i}}\times\Phi^{-1}(1-\alpha)$
\end_inset

 
\end_layout

