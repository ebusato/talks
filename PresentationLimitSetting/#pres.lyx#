\begin_layout BeginFrame
Softwares
\end_layout

\begin_layout Itemize
CLsGenerator and BayesianMCMC can be used for multiple channels
\end_layout

\begin_layout BeginFrame
Validation of CLsGenerator and BayesianMCMC
\end_layout

\begin_layout Itemize
We expect that increasing luminosity by factor 
\begin_inset Formula $N$
\end_inset

 is equivalent to increasing number of channels (having the same sensitivity)
 by the same factor (see next two slides)
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
vspace*{0.3cm}
\end_layout

\end_inset


\end_layout

\begin_layout Itemize
Here we check that CLsGenerator and BayesianMCMC are in agreement with this
 expectation
\end_layout

\begin_deeper
\begin_layout Itemize
Validates in both cases implementation of channel combination
\end_layout

\end_deeper
\begin_layout BeginFrame
Demonstration equivalence lumi/#channels (CLsGenerator)
\end_layout

\begin_layout Itemize
Single channel: 
\begin_inset Formula $q_{\mu}=2\left[\mu s-N_{\text{obs}}\ln\frac{\mu s+b}{b}\right]$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $N$
\end_inset

 channels: 
\begin_inset Formula $q_{\mu,1}=2\left[\mu\sum\limits _{c:channels}s_{c}-\sum\limits _{c:channels}N_{\text{obs}}^{c}\ln\frac{\mu s_{c}+b_{c}}{b_{c}}\right]$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Assume yields are the same in all channels (
\begin_inset Formula $s_{c}=s$
\end_inset

, 
\begin_inset Formula $b_{c}=b$
\end_inset

, 
\begin_inset Formula $N_{\text{obs}}^{c}=N_{\text{obs}}$
\end_inset

):
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $q_{\mu,1}=2\left[\mu Ns-N_{\text{obs}}\ln\left(\prod\limits _{c:channels}\frac{\mu s_{c}+b_{c}}{b_{c}}\right)\right]=N\times2\left[\mu s-N_{\text{obs}}\ln\frac{\mu s+b}{b}\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\Rightarrow q_{\mu,1}=Nq_{\mu}$
\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Multiplying lumi.
 by 
\begin_inset Formula $N$
\end_inset

: 
\begin_inset Formula $ $
\end_inset


\begin_inset Formula $q_{\mu,2}=2\left[\mu s'-N_{\text{obs}}'\ln\frac{\mu s'+b'}{b'}\right]$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $s'=Ns$
\end_inset

, 
\begin_inset Formula $b'=Nb$
\end_inset

 and 
\begin_inset Formula $N_{\text{obs}}'=NN_{\text{obs}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\Rightarrow$
\end_inset


\begin_inset Formula $q_{\mu,2}=N\times2\left[\mu s-N_{\text{obs}}\ln\frac{\mu s+b}{b}\right]=Nq_{\text{\mu}}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Conclusion: 
\begin_inset Formula $q_{\mu,1}=q_{\mu,2}$
\end_inset


\end_layout

\begin_layout BeginFrame
Demonstration equivalence lumi/#channels (BayesianMCMC)
\end_layout

\begin_layout Itemize
Single channel: 
\begin_inset Formula ${\cal L}\left(\mu\right)=\frac{\left(\mu s+b\right)^{N_{\text{obs}}}}{N_{\text{obs }}!}e^{-\left(\mu s+b\right)}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $N$
\end_inset

 channels: 
\begin_inset Formula ${\cal L}_{1}\left(\mu\right)=\prod\limits _{c:channels}{\cal L}_{c}\left(\mu\right)=\prod\limits _{c:channels}\frac{\left(\mu s_{c}+b_{c}\right)^{N_{\text{obs}}^{c}}}{N_{\text{obs }}^{c}!}e^{-\left(\mu s_{c}+b_{c}\right)}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Assume yields are the same in all channels (
\begin_inset Formula $s_{c}=s$
\end_inset

, 
\begin_inset Formula $b_{c}=b$
\end_inset

, 
\begin_inset Formula $N_{\text{obs}}^{c}=N_{\text{obs}}$
\end_inset

):
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $\Rightarrow{\cal L}_{1}\left(\mu\right)=$
\end_inset


\begin_inset Formula $\left[\frac{\left(\mu s+b\right)^{N_{\text{obs}}}}{N_{\text{obs }}!}e^{-\left(\mu s+b\right)}\right]^{N}=\text{\frac{1}{\left(N_{\text{obs}}!\right)^{N}}\left(\mu s+b\right)^{NN_{\text{obs}}}}e^{-N\left(\mu s+b\right)}$
\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Multiplying lumi.
 by 
\begin_inset Formula $N$
\end_inset

: 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula ${\cal L}_{2}\left(\mu\right)=\frac{\left(\mu s'+b'\right)^{N_{\text{obs}}'}}{N_{\text{obs }}'!}e^{-\left(\mu s'+b'\right)}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $s'=Ns$
\end_inset

, 
\begin_inset Formula $b'=Nb$
\end_inset

 and 
\begin_inset Formula $N_{\text{obs}}'=NN_{\text{obs}}$
\end_inset


\end_layout

\begin_layout Standard

\family roman
\size small
\color black
\begin_inset Formula $\Rightarrow{\cal L}_{2}\left(\mu\right)=\frac{\left(\mu Ns+Nb\right)^{NN_{\text{obs}}}}{\left(NN_{\text{obs }}\right)!}e^{-\left(\mu Ns+Nb\right)}=\frac{N^{NN_{\text{obs}}}}{\left(NN_{\text{obs}}\right)!}\left(\mu s+b\right)^{NN_{\text{obs}}}e^{-N\left(\mu s+b\right)}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Conclusion: 
\begin_inset Formula ${\cal L}_{1}\left(\mu\right)\propto{\cal L}_{2}\left(\mu\right)$
\end_inset

 so inference on 
\begin_inset Formula $\mu$
\end_inset

 is the same
\end_layout

