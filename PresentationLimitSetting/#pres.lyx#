\end_layout

\begin_layout Itemize
\begin_inset Formula $b_{i}'=b_{i}'(\{\eta_{j}\})=b_{i}\times\prod\limits_{j}f_{ij}^{\text{syst}}(\eta_{j})$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $s'=s'(\{\eta_{j}\})=s_{\text{nom}}\times\prod\limits_{j}f_{j}^{\text{syst}}(\eta_{j})$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $g(\eta_{j})={\cal N}(0,1)$
\end_inset

 (standard normal distribution)
\end_layout

